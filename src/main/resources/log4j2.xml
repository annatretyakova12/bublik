<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="MainLog" fileName="logs/app.log" immediateFlush="true" append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} %X - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="MainLog"/>
        </Root>
        <logger name="com.zaxxer.hikari">
            <level value="error"/>
        </logger>
<!--
        <Logger name="org.postgresql" level="all"/>
-->
    </Loggers>
</Configuration>